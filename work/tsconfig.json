{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["dom", "es2016"],
    "types": [
      "@types/node",
      "@nuxt/vue-app",
      "@types/jest"
    ],
    "paths": { "@/*": [ "./src/*" ], "~/*": [ "./src/*" ] },
    "target": "es2015",
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "declarationMap": false,
    "downlevelIteration": true,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "includes": ["./src/**/*.ts", "/src/**/*.vue"]
}
